<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MySteamLibrary.ViewModels"
             xmlns:models="using:MySteamLibrary.Models"
             xmlns:views="using:MySteamLibrary.Views"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ItemsRepeater"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MySteamLibrary.Views.CarouselView"
             x:DataType="vm:CarouselViewModel">

    <Grid RowDefinitions="*, Auto">
        <ScrollViewer x:Name="CarouselScroll"
                      Grid.Row="0" 
                      HorizontalScrollBarVisibility="Hidden" 
                      VerticalScrollBarVisibility="Disabled"
                      PointerWheelChanged="OnPointerWheelChanged">
            
            <controls:ItemsRepeater ItemsSource="{Binding Games}" 
                                    Margin="50,0"
                                    VerticalAlignment="Center">
                <controls:ItemsRepeater.Layout>
                    <StackLayout Orientation="Horizontal" 
                                 Spacing="-40" />
                </controls:ItemsRepeater.Layout>

                <controls:ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:GameModel">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                Command="{Binding $parent[views:MainView].((vm:MainViewModel)DataContext).OpenGameDetailsCommand}"
                                CommandParameter="{Binding}"
                                ClipToBounds="False">
                            
                            <Border Width="200" 
                                    Height="300" 
                                    Background="#2a2e33" 
                                    CornerRadius="8"
                                    BoxShadow="0 10 20 0 Black">
                                <Panel>
                                    <TextBlock Text="{Binding Title}" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               Padding="10"
                                               TextWrapping="Wrap"/>
                                </Panel>
                            </Border>
                        </Button>
                    </DataTemplate>
                </controls:ItemsRepeater.ItemTemplate>
            </controls:ItemsRepeater>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Margin="0,0,0,40" HorizontalAlignment="Center">
            <TextBlock Text="GAME TITLE" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>