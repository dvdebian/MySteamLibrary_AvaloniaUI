<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MySteamLibrary.ViewModels"
             xmlns:models="using:MySteamLibrary.Models"
             xmlns:views="using:MySteamLibrary.Views"
             xmlns:conv="using:MySteamLibrary.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MySteamLibrary.Views.ListView"
             x:DataType="vm:ListViewModel">

    <UserControl.Resources>
        <conv:BitmapValueConverter x:Key="VariableImageConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="20,0,20,12"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="Border.GameRow">
            <Setter Property="Background" Value="#1e2329"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover Border.GameRow">
            <Setter Property="Background" Value="#3367c1f5"/>
        </Style>
    </UserControl.Styles>

    <ListBox ItemsSource="{Binding Games}" Padding="0,20,0,0" ClipToBounds="False">
        <ListBox.ItemTemplate>
            <DataTemplate x:DataType="models:GameModel">
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Command="{Binding $parent[views:MainView].((vm:MainViewModel)DataContext).OpenGameDetailsCommand}"
                        CommandParameter="{Binding}">
                    
                    <Border Classes="GameRow" Padding="15">
                        <Grid ColumnDefinitions="Auto, *">
                            
                            <Panel Grid.Column="0" Width="120" Height="180" Background="#2a2e33">
                                <Image Source="{Binding ImagePath, Converter={StaticResource VariableImageConverter}}" 
                                       Stretch="UniformToFill"/>
                            </Panel>
                            
                            <StackPanel Grid.Column="1" Margin="25,0" VerticalAlignment="Center" Spacing="5">
                                <TextBlock Text="{Binding Title}" 
                                           FontWeight="Black" 
                                           FontSize="24"
                                           Foreground="White"/>
                                
                                <TextBlock Text="{Binding PlayTime}" 
                                           Foreground="#67c1f5" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                                
                                <TextBlock Text="{Binding Description}" 
                                           Opacity="0.6" 
                                           TextWrapping="Wrap" 
                                           MaxLines="3" 
                                           FontSize="13"
                                           LineHeight="20"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Button>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>