<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MySteamLibrary.ViewModels"
             x:Class="MySteamLibrary.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Panel Background="#CC000000"> 
        
        <Border Background="#1e2329" 
                CornerRadius="8" 
                Padding="20" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="400"
                BoxShadow="0 10 30 5 Black"> <StackPanel Spacing="15">
                <TextBlock Text="SETTINGS" FontSize="18" FontWeight="Bold" />
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Steam API Key:" FontSize="12" Opacity="0.6"/>
                    <TextBox Text="{Binding SteamApiKey}" />
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Steam ID:" FontSize="12" Opacity="0.6"/>
                    <TextBox Text="{Binding SteamId}" />
                </StackPanel>

                <Button Content="CLOSE" 
                        Command="{Binding CloseCommand}"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Panel>
</UserControl>