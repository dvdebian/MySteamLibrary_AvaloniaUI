<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MySteamLibrary.ViewModels"
             x:Class="MySteamLibrary.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Panel Background="#CC000000"> 
        
        <Border Background="#1e2329" 
                CornerRadius="8" 
                Padding="20" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="450"
                BoxShadow="0 10 30 5 Black">
            <StackPanel Spacing="15">
                <TextBlock Text="SETTINGS" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,5"/>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Steam API Key:" 
                               FontSize="12" 
                               Foreground="#99ffffff"
                               FontWeight="SemiBold"/>
                    <TextBox Text="{Binding SteamApiKey}" 
                             Watermark="Enter your Steam API Key"
                             Background="#101a24"
                             Foreground="White"
                             BorderBrush="#2a475e"
                             BorderThickness="1"
                             CornerRadius="4"
                             Padding="8"/>
                    <TextBlock Text="Get your API key from: https://steamcommunity.com/dev/apikey" 
                               FontSize="10" 
                               Foreground="#67c1f5"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Steam ID:" 
                               FontSize="12" 
                               Foreground="#99ffffff"
                               FontWeight="SemiBold"/>
                    <TextBox Text="{Binding SteamId}" 
                             Watermark="Enter your Steam ID (64-bit)"
                             Background="#101a24"
                             Foreground="White"
                             BorderBrush="#2a475e"
                             BorderThickness="1"
                             CornerRadius="4"
                             Padding="8"/>
                    <TextBlock Text="Find your Steam ID at: https://steamid.io" 
                               FontSize="10" 
                               Foreground="#67c1f5"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Grid ColumnDefinitions="*,*" 
                      Margin="0,10,0,0"
                      ColumnSpacing="10">
                    
                    <Button Grid.Column="0"
                            Content="CLEAR DATA" 
                            Command="{Binding ClearDataCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Background="#8B0000"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            Padding="0,10"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#A52A2A"/>
                            </Style>
                        </Button.Styles>
                    </Button>

                    <Button Grid.Column="1"
                            Content="SAVE &amp; CLOSE" 
                            Command="{Binding CloseCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Background="#2a475e"
                            Foreground="White"
                            BorderBrush="#67c1f5"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="0,10"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#3a5770"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Panel>
</UserControl>