<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MySteamLibrary.ViewModels"
             xmlns:views="using:MySteamLibrary.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MySteamLibrary.Views.MainView"
             x:DataType="vm:MainViewModel">

    <UserControl.Styles>
      
        <!-- Base Nav Button Style -->
       

        <!-- Hover State -->
       

        <!-- Active/Selected State 1a8ee3  -->
   <!--     <Style Selector="Button.Nav.Active">
            <Setter Property="Background" Value="#537a97"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#537a97"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
        </Style>-->

            <Style Selector="Button.Nav.Active">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#1a8ee3"/>
                <Setter Property="BorderBrush" Value="#1a8ee3"/>
                <Setter Property="BorderThickness" Value="0,0,0,4"/>
            </Style>

        <!-- Active button should stay highlighted on hover -->
       



        <!-- Effect button  -->
        <Style Selector="Button.EffectButton">
            <Setter Property="Background" Value="#1a3d52"/>  <!-- Blue-teal mix -->
            <Setter Property="Foreground" Value="#42d9ff"/>  <!-- Bright aqua -->
          <Setter Property="BorderBrush" Value="#42d9ff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>  
  
        <Style Selector="Button.EffectButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#3a4d5d"/>  
            <Setter Property="Foreground" Value="White"/>  
            <Setter Property="BorderBrush" Value="#42d9ff"/>
        </Style>

     
        <!-- Combobox style -->
       
    

        <!-- Combo Box selected item style-->
          <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
              <Setter Property="Foreground" Value="#d5dcde"/>
            <Setter Property="Background" Value="#3d4450"/> 
        </Style>

             <!-- Combo Box hover item style-->
        <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#dcdedf"/>
            <Setter Property="Foreground" Value="#181f29"/>
        </Style>
        <Style Selector="ComboBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#dcdedf"/>
            <Setter Property="Foreground" Value="#181f29"/>
        </Style>
          
        <!-- Combo Box general list style-->
        <Style Selector="ComboBoxItem">      
            <Setter Property="Foreground" Value="#d5dcde"/>
            <Setter Property="Background" Value="#3d4450"/>            
         </Style>
        <!-- Combo Box closed list style  #d5dcde-->
         <Style Selector="ComboBox">
            <Setter Property="Foreground" Value="#d5dcde"/>
        </Style>
        <Style Selector="ComboBox:pointerover /template/ Border#Background">
            <Setter Property="BorderBrush" Value="#2a3f54" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#364352" />
        </Style>








   
    </UserControl.Styles>

    <UserControl.DataTemplates>
        <DataTemplate DataType="{x:Type vm:ListViewModel}">
            <views:ListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GridViewModel}">
            <views:GridView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CoverViewModel}">
            <views:CoverView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CarouselViewModel}">
            <views:CarouselView x:Name="CarouselViewInstance"/>
        </DataTemplate>
    </UserControl.DataTemplates>

    <Grid RowDefinitions="Auto, *" Background="{StaticResource SteamDarkBg}">
        
        <Border Grid.Row="0" Background="{StaticResource SteamHeaderBg}" Padding="20">
            <StackPanel Spacing="15">
                
                <TextBlock Text="MY STEAM LIBRARY" 
                           FontSize="22" 
                           FontWeight="Black" 
                           Foreground="White"
                           LetterSpacing="1">
                    <Run Text="  |" FontWeight="Light" FontSize="20" Foreground="#AAFFFFFF"/>
                    <Run Text="{Binding GameListTotal}" FontWeight="Light" FontSize="16" />
                    <Run Text=" GAMES" FontWeight="Light" FontSize="12"  Foreground="#AAFFFFFF"/>
                    </TextBlock>
                
                <Grid ColumnDefinitions="*, Auto" Background="{StaticResource SteamHeaderBg}">
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="5">
                        <Button Content="LIST" 
                                Classes="Nav"
                                Classes.Active="{Binding IsListMode}"
                                Command="{Binding SelectModeCommand}" 
                                CommandParameter="List"/>

                        <Button Content="GRID" 
                                Classes="Nav"
                                Classes.Active="{Binding IsGridMode}"
                                Command="{Binding SelectModeCommand}" 
                                CommandParameter="Grid"/>

                        <Button Content="COVER" 
                                Classes="Nav"
                                Classes.Active="{Binding IsCoverMode}"
                                Command="{Binding SelectModeCommand}" 
                                CommandParameter="Cover"/>

                        <Button Content="CAROUSEL" 
                                Classes="Nav"
                                Classes.Active="{Binding IsCarouselMode}"
                                Command="{Binding SelectModeCommand}" 
                                CommandParameter="Carousel"/>
                        
                        <!-- Effect Button (only visible in Carousel mode) -->
                        <Button Classes="EffectButton" 
                                Content="EFFECT" 
                                Click="OnEffectButtonClicked"
                                IsVisible="{Binding IsCarouselMode}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                        
                        <Button Classes="Nav" 
                                Command="{Binding RefreshLibraryCommand}"
                                IsEnabled="{Binding !IsRefreshing}"
                                Content="REFRESH"
                                ToolTip.Tip="Refresh Library">
                            
                        </Button>

                        <Button Classes="Nav" 
                                Width="40" Height="40"
                                Command="{Binding ToggleSettingsCommand}"
                                ToolTip.Tip="Settings"
                                Background="Transparent">
                               
                            <Path Data="M19.14,12.94c.04-.3,.06-.61,.06-.94c0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14,.23-.41,.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39,.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24,0-.43,.17-.47,.41l-.36,2.54c-.59,.24-1.13,.57-1.62,.94l-2.39-.96c-.22-.08-.47,0-.59,.22L3.31,8.87c-.12,.21-.08,.47,.12,.61l2.03,1.58c-.05,.3-.09,.63-.09,.94s.02,.64,.07,.94l-2.03,1.58c-.18,.14-.23,.41-.12,.61l1.92,3.32c.12,.22,.37,.29,.59,.22l2.39-.96c.5,.38,1.03,.7,1.62,.94l.36,2.54c.05,.24,.24,.41,.48,.41h3.84c.24,0,.44-.17,.47-.41l.36-2.54c.59-.24,1.13-.56,1.62-.94l2.39,.96c.22,.08,.47,0,.59-.22l1.92-3.32c.12-.21,.07-.47-.12-.61l-2.01-1.58ZM12,15.6c-1.98,0-3.6-1.62-3.6-3.6s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6s-1.62,3.6-3.6,3.6Z" 
                                   Stretch="Uniform" Width="18" VerticalAlignment="Center"/>
                             <Button.Styles>
                                <Style Selector="Path">
                                    <Setter Property="Fill" Value="#dcdedf" />
                                    <Setter Property="Transitions">
                                        <Transitions>
                                            <BrushTransition Property="Fill"/>
                                        </Transitions>
                                    </Setter>
                                </Style>

                                <Style Selector="Button:pointerover Path">
                                    <Setter Property="Fill" Value="White" />
                                </Style>
        
                                <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Grid>
                
                
                <!-- Search Box with Clear Button -->
                <Grid>
                    <TextBox Watermark="🔍 SEARCH GAMES..." 
                             Text="{Binding SearchText}" 
                             HorizontalAlignment="Stretch"
                             Background="#364352"
                             BorderBrush="#515b67"
                             BorderThickness="2"
                             CornerRadius="8"
                             Padding="14,10,45,10"
                             FontSize="13"
                             Foreground="White">
                        <TextBox.Styles>
                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="BorderBrush" Value="#537a97"/>
                                <Setter Property="Background" Value="#364352"/>
                            </Style>
                            <Style Selector="TextBox.active:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="BorderBrush" Value="red"/>
                                <Setter Property="Background" Value="red"/>
                            </Style>
                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                <Setter Property="BorderBrush" Value="#1a7ac1"/>
                                <Setter Property="Background" Value="#242931"/>
                            </Style>

                        </TextBox.Styles>
                    </TextBox>
                    
                    <!-- Clear Button (appears when text exists) -->
                    <Button Width="22" Height="22"
                            Background="#1a2a3a"
                            BorderBrush="#2a3f54"
                            BorderThickness="2"
                            CornerRadius="11"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Command="{Binding ClearSearchCommand}"
                            Cursor="Hand"
                            IsVisible="{Binding SearchText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#2a3f54"/>
                                <Setter Property="BorderBrush" Value="#537a97"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock Text="✕" 
                                   FontSize="14" 
                                   Foreground="#8395a7" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Button>
                </Grid>



                <!-- Filter/Sync Area - Single Border Container -->
                <Border Background="#182636"
                        BorderBrush="#373c44"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15,12"
                        Margin="0,8,0,0"
                        IsVisible="{Binding IsSyncPanelExpanded}">
                    <StackPanel Spacing="12">
                        
                        <!-- Filter Row with Toggle Button -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Checkbox: Show only played games -->
                            <CheckBox Grid.Column="0"
                                      IsChecked="{Binding ShowOnlyPlayedGames}"
                                      Content="Show only played games"
                                      FontSize="12"
                                      Foreground="#8395a7"
                                      Margin="0,0,20,0">
                                <CheckBox.Styles>
                                    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
                                        <Setter Property="Background" Value="#537a97"/>
                                        <Setter Property="BorderBrush" Value="#537a97"/>
                                    </Style>
                                </CheckBox.Styles>
                            </CheckBox>
                            
                            <!-- Sort dropdown -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Sort by:" 
                                           FontSize="12" 
                                           Foreground="#8395a7"
                                           VerticalAlignment="Center"/>
                                
                                <ComboBox SelectedIndex="{Binding CurrentSortModeIndex}"
                                          MinWidth="140"
                                          FontSize="12"
                                         
                                          BorderBrush="#2a3f54"
                                          BorderThickness="1"
                                          CornerRadius="4"
                                          Padding="8,4">
                                    <ComboBoxItem Content="Alphabetical"/>
                                    <ComboBoxItem Content="Play Time"/>
                                    <ComboBoxItem Content="App ID"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Toggle Button (Right Side) -->
                            <Button Grid.Column="3"
                                    Width="24" Height="24" 
                                    Background="#101a24" 
                                    BorderBrush="#537a97" 
                                    BorderThickness="0"                                   
                                    CornerRadius="4" 
                                    Padding="0" 
                                    Command="{Binding ToggleSyncPanelCommand}" 
                                    ToolTip.Tip="Hide filters and sync progress" 
                                    Cursor="Hand">
                                <Panel>
                                    <TextBlock Text="▲" FontSize="11" Foreground="#537a97" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Panel>
                            </Button>
                        </Grid>
                        
                        <!-- Separator Line (only visible when syncing) -->
                        <Grid Margin="0,10">
    <Border Height="1" 
            Background="#373c44" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center"/>

    <TextBlock Text="Syncing Status" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Foreground="#8395a7"
               Background="#1a2a3a" 
               Padding="10,0" />
</Grid>
                        
                        <!-- Sync Progress Balloons - Even 3-Column Grid (only visible when syncing) -->
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Game List Balloon -->
                            <Border Grid.Column="0" 
                                    Background="#101a24" 
                                    BorderBrush="#2a3f54" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12,8"
                                    Margin="0,0,5,0">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="Game List" 
                                               FontSize="11" 
                                               FontWeight="SemiBold" 
                                               Foreground="#8395a7" 
                                               HorizontalAlignment="Center"/>
                                    <ProgressBar Height="4" 
                                                 Minimum="0" 
                                                 Maximum="{Binding GameListTotal}" 
                                                 Value="{Binding GameListCurrent}" 
                                                 Foreground="#537a97" 
                                                 Background="#0d1419"/>
                                    <TextBlock HorizontalAlignment="Center" FontSize="11">
                                        <Run Text="{Binding GameListCurrent}" FontWeight="Bold" Foreground="White"/>
                                        <Run Text="/" Foreground="#8395a7"/>
                                        <Run Text="{Binding GameListTotal}" Foreground="#8395a7"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <!-- Images Balloon -->
                            <Border Grid.Column="1" 
                                    Background="#101a24" 
                                    BorderBrush="#2a3f54" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12,8"
                                    Margin="5,0,5,0">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="Images" 
                                               FontSize="11" 
                                               FontWeight="SemiBold" 
                                               Foreground="#8395a7" 
                                               HorizontalAlignment="Center"/>
                                    <ProgressBar Height="4" 
                                                 Minimum="0" 
                                                 Maximum="{Binding ImagesTotal}" 
                                                 Value="{Binding ImagesCurrent}" 
                                                 Foreground="#537a97" 
                                                 Background="#0d1419"/>
                                    <TextBlock HorizontalAlignment="Center" FontSize="11">
                                        <Run Text="{Binding ImagesCurrent}" FontWeight="Bold" Foreground="White"/>
                                        <Run Text="/" Foreground="#8395a7"/>
                                        <Run Text="{Binding ImagesTotal}" Foreground="#8395a7"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <!-- Descriptions Balloon -->
                            <Border Grid.Column="2" 
                                    Background="#101a24" 
                                    BorderBrush="#2a3f54" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12,8"
                                    Margin="5,0,0,0">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="Descriptions" 
                                               FontSize="11" 
                                               FontWeight="SemiBold" 
                                               Foreground="#8395a7" 
                                               HorizontalAlignment="Center"/>
                                    <ProgressBar Height="4" 
                                                 Minimum="0" 
                                                 Maximum="{Binding DescriptionsTotal}" 
                                                 Value="{Binding DescriptionsCurrent}" 
                                                 Foreground="#537a97" 
                                                 Background="#0d1419"/>
                                    <TextBlock HorizontalAlignment="Center" FontSize="11">
                                        <Run Text="{Binding DescriptionsCurrent}" FontWeight="Bold" Foreground="White"/>
                                        <Run Text="/" Foreground="#8395a7"/>
                                        <Run Text="{Binding DescriptionsTotal}" Foreground="#8395a7"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Collapsed State Toggle Button -->
                <Grid Margin="0,5,0,0" IsVisible="{Binding !IsSyncPanelExpanded}">
                    <Button HorizontalAlignment="Right"
                            Width="24" Height="24" 
                            Background="#171d25" 
                            BorderBrush="#537a97" 
                            BorderThickness="0" 
                            CornerRadius="4" 
                            Padding="0" 
                            Command="{Binding ToggleSyncPanelCommand}" 
                            ToolTip.Tip="Show filters and sync progress" 
                            Cursor="Hand">
                        <Panel>
                            <TextBlock Text="▼" FontSize="11" Foreground="#537a97" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Panel>
                    </Button>
                </Grid>
                
                
                <!-- Error Message Display -->
                <Border Background="#c23616" 
                        Padding="12,8" 
                        CornerRadius="4"
                        MaxWidth="600"
                        HorizontalAlignment="Left"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="White"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Show game views when data exists -->
            <ContentControl Content="{Binding ActiveView}" IsVisible="{Binding !HasNoData}" />

            <!-- Show "No data found" message when no games are loaded -->
            <Border Background="{StaticResource SteamDarkBg}" 
                    IsVisible="{Binding HasNoData}">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Spacing="20">
                    <TextBlock Text="📭" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               Opacity="0.5"/>
                    <TextBlock Text="NO DATA FOUND" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#67c1f5"
                               HorizontalAlignment="Center"
                               LetterSpacing="2"/>
                    <TextBlock Text="Please update the Settings and click Refresh to load your Steam library." 
                               FontSize="14" 
                               Foreground="#8395a7"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="400"/>
                    <Button Content="OPEN SETTINGS" 
                            Command="{Binding ToggleSettingsCommand}"
                            Background="#2a475e"
                            Foreground="White"
                            BorderBrush="#67c1f5"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="20,12"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#3a5770"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Panel Grid.Row="0" Grid.RowSpan="2" IsVisible="{Binding IsSettingsOpen}">
            <views:SettingsView DataContext="{Binding Settings}" />
        </Panel>
        
        <Panel Grid.Row="0" Grid.RowSpan="2" IsVisible="{Binding IsGameDetailsOpen}">
            <views:GameDetailsView DataContext="{Binding CurrentDetails}" />
        </Panel>

        
    </Grid>

</UserControl>
