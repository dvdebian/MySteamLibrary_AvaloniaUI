<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MySteamLibrary.ViewModels"
             x:Class="MySteamLibrary.Views.GameDetailsView"
             x:DataType="vm:GameDetailsViewModel"
             Background="#1b2838">
    <Grid ColumnDefinitions="300, *" Margin="40">
        <Image Grid.Column="0" Source="{Binding SelectedGame.ImagePath}" 
               Stretch="UniformToFill" VerticalAlignment="Top"/>
        
        <StackPanel Grid.Column="1" Margin="30,0,0,0" Spacing="20">
            <TextBlock Text="{Binding SelectedGame.Title}" FontSize="36" FontWeight="Bold"/>
            <TextBlock Text="TIME PLAYED: 12.5 hours" Foreground="Gray"/>
            <TextBlock Text="{Binding SelectedGame.Description}" TextWrapping="Wrap" FontSize="16"/>
            
            <Button Content="BACK" HorizontalAlignment="Left" 
                    Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>